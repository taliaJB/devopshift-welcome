def dockerImage
pipeline {
	agent any
	environment {
		CREDENTIALS_ID = 'dh_proj'
                WORK_DIR = 'welcome/app/bookinfo/src/productpage/'
		DOCKER_FILE = 'Dockerfile'
		IMAGE_NAME = 'productpage'
		REPO = 'taliadh'
		VERSION = "ver${env.BUILD_NUMBER}"
	}
	stages {
		stage('Build'){
			steps {
				script {
					//Build the docker images
					sh "docker build -f ${WORK_DIR}${DOCKER_FILE} --target build --tag ${IMAGE_NAME}:${VERSION}-build ${WORK_DIR}"
				}	

			}
		}

		stage('Test') {
			steps {
				script {
					// Test
                                        sh '''
					docker build -f ${WORK_DIR}${DOCKER_FILE} --target test --tag ${IMAGE_NAME}:${VERSION}-test ${WORK_DIR}
					docker run --rm ${IMAGE_NAME}:${VERSION}-test
                                        '''
				}
			}
		}
		
		stage('Push') {
			steps {
				script {

                                        docker.withRegistry("", "${CREDENTIALS_ID}") {
                                                sh '''
						docker build -f ${WORK_DIR}${DOCKER_FILE} --target run --tag ${REPO}/${IMAGE_NAME}:${VERSION} ${WORK_DIR}
						docker push ${REPO}/${IMAGE_NAME}:${VERSION}
                                                docker tag ${REPO}/${IMAGE_NAME}:${VERSION} ${REPO}/${IMAGE_NAME}:latest
						docker push ${REPO}/${IMAGE_NAME}:latest
                                                '''
					}				
				}	
			}
                }
	}
}

