def dockerImage
pipeline {
	agent any
	environment {
		CREDENTIALS_ID = 'dh_proj'
                WORKDIR = 'welcome/app/bookinfo/src/productpage/'
		DOCKER_FILE = 'Dockerfile'
		IMAGE_NAME = 'productpage'
		REPO = 'taliadh'
		VERSION = 'someversion'
	}
	stages {
		stage('Build'){
			steps {
				script {
					//Build the docker images
					sh 'pwd'
					sh "docker build -f ${WORKDIR}${DOCKER_FILE} --target build --tag ${IMAGE_NAME}:${VERSION}-build ${WORKDIR}"
				}	

			}
		}

		stage('Test') {
			steps {
				script {
					// Test
					sh "docker build -f ${WORKDIR}${DOCKER_FILE} --target test --tag ${IMAGE_NAME}:${VERSION}-test ${WORKDIR}"
					sh "docker run --rm ${IMAGE_NAME}:${VERSION}-test"
				}
			}
		}
		
		stage('Push') {
			steps {
				script {

                                        docker.withRegistry("https://index.docker.io/v1", "${CREDENTIALS_ID}") {
                                                sh '''
						docker build -f ${WORKDIR}${DOCKER_FILE} --target run --tag ${IMAGE_NAME}:${VERSION}-stage ${WORKDIR}
						docker login -u $USERNAME -p $PASSWORD
						docker push ${REPO}/${IMAGE_NAME}:${VERSION}-stage
                                                '''
					}				
				}	
			}
                }
	}
}

